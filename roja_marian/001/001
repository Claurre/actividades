totalventas=0
c=True
cantunidades=0
while c==True:
	precio=float(input("Ingrese el precio del producto: "))
	cantunidades=int(input("Ingrese la cantidad de unidades vendidas: "))
	totalventas=totalventas+(precio*cantunidades)
	a=input("Â¿Desea ingresar otro producto? S/N ")
	if (a.upper()=="S"):
		c=True
	elif (a.upper()=="N"):
		c=False
		print("")
	else:
		print("Intente de nuevo ingresando solo 'S' o 'N'")
		break
print("El total de las ventas es de: ",totalventas)
